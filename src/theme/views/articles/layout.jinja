@frontmatter
{
    "title": "Blog Posts Layout",
    "author": "Shodo SSG",
    "body_class": "blog-page",
    "body_id": "blog-page-container",
    "description": "This is the default blog template"
}
@endfrontmatter

<!-- This is the default layout for all pages generated from 'markdown/articles'.
You can override this layout for specific subdirectories by creating a layout.jinja 
file in that subdirectory, e.g., 'views/articles/blog/layout.jinja' -->
<div class="container">
<header class="page-header">
    <h1 class="page-header__title">{{ article.title }}</h1>
</header>

<main>
    {% if article.published_dt_local %}
    <div>Published on: {{ article.published_dt_local.strftime("%B") }} {{ article.published_dt_local.day }}, {{ article.published_dt_local.year }} at {{ article.published_dt_local.strftime("%I:%M %p") }} {{ article.published_dt_local.strftime("%Z") }}</div>
    {% endif %}
    <hr>
    {{ article.content }}
</main>
{% include 'partials/footer.jinja' %}
</div>